@model Multimark.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes do Cliente</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Data de Nascimento
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            CPF/CNPJ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cpf_Cnpj)
        </dd>
        <dt>
            RG
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rg)
        </dd>
        <dt>
            Endereço
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            Número da casa
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AddressNumber)
        </dd>
        <dt>
            Bairro
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Neighborhood)
        </dd>
        <dt>
            Cidade
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            Telefone Fixo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TelePhone)
        </dd>
        <dt>
            Celular
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CellPhone)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Observações
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"><img src="~/images/edit.png" />Editar </a>
    <a asp-action="Index"> <img src="~/images/back.png" /> Voltar</a>
</div>
