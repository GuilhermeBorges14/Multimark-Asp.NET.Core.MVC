@model Multimark.Models.Adm

@{
    ViewData["Title"] = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja remover o funcionário?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Usuário
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User)
        </dd>
        <dt>
            Senha
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />  <hr />
        <a asp-action="Index"> <img src="~/images/back.png" /> Voltar</a>
    </form>
</div>
