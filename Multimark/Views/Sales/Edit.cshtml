@model Multimark.Models.ViewModels.SalesFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Tem certeza que deseja cancelar esta venda?</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sales.Id" class="control-label">Id da venda</label>
                <input asp-for="Sales.Id" class="form-control" />
                <span asp-validation-for="Sales.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sales.Date" class="control-label">Data da venda</label>
                <input asp-for="Sales.Date" class="form-control" />
                <span asp-validation-for="Sales.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sales.Total" class="control-label">Valor da venda</label>
                <input asp-for="Sales.Total" class="form-control" />
                <span asp-validation-for="Sales.Total" class="text-danger"></span>
            </div>
            <p style="color:red">Troque o status para cancelar!</p>
            <div class="form-group">
                <label asp-for="Statuss" class="control-label"></label>
                <select asp-for="Statuss" class="form-control">@Html.</select>
                <span asp-validation-for="Sales.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cancelar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Create"> <img src="~/images/back.png" /> Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}