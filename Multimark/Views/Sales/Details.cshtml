@model Multimark.Models.Sales

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes da venda</h2>

<div>
    <h4>Venda Id : @Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Data da venda
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Nome do cliente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt>
            Valor da venda
        </dt>
        <dd>
            R$ @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Index"> <img src="~/images/back.png" /> Voltar</a>
</div>
