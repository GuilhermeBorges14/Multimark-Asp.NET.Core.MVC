@model Multimark.Models.ViewModels.SalesFormViewModel

@{
    ViewData["Title"] = "Create";
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group">
                <label asp-for="Sales.StatusId" class="control-label" style="color:green">Status da Venda</label>
                <select asp-for="Sales.StatusId" asp-items="@(new SelectList(Model.Status,"Id","Name"))" class="form-control"></select>
            </div>
            <h2>Nova Venda</h2>
            <div class="form-group">
                <label asp-for="Sales.Date" class="control-label">Data da venda</label>
                <input asp-for="Sales.Date" class="form-control" />
                <span asp-validation-for="Sales.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sales.ClientId" class="control-label">Cliente</label>
                <select asp-for="Sales.ClientId" asp-items="@(new SelectList(Model.Clients,"Id","Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Sales.Total" class="control-label">Valor da venda</label>
                <input asp-for="Sales.Total" class="form-control" />
                <span asp-validation-for="Sales.Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> <img src="~/images/back.png" /> Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
